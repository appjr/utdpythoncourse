## Practical Examples
# Example 1: Student Records

students = pd.DataFrame({

    'Name': ['Emma', 'Liam', 'Olivia', 'Noah'],

    'Math': [85, 90, 78, 88],

    'Science': [88, 85, 92, 86],

    'English': [90, 87, 85, 89]

})



print("Student Records:")

print(students)
# Example 2: Product Inventory

inventory = pd.DataFrame({

    'Product': ['Laptop', 'Mouse', 'Keyboard', 'Monitor'],

    'Price': [999.99, 25.50, 75.00, 299.99],

    'Stock': [15, 50, 30, 20],

    'Category': ['Electronics', 'Accessories', 'Accessories', 'Electronics']

})



print("\nInventory:")

print(inventory)



# Calculate total value

inventory['Total_Value'] = inventory['Price'] * inventory['Stock']

print("\nWith Total Value:")

print(inventory)
# Example 3: Sales Data

sales = pd.DataFrame({

    'Month': ['Jan', 'Feb', 'Mar', 'Apr'],

    'Sales': [10000, 12000, 15000, 13000],

    'Expenses': [7000, 8000, 9000, 8500]

})



# Calculate profit

sales['Profit'] = sales['Sales'] - sales['Expenses']



print("\nSales Report:")

print(sales)

print(f"\nTotal Profit: ${sales['Profit'].sum()}")
